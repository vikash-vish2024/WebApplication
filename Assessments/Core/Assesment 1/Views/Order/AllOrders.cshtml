@model List<Order>
@{
    ViewData["Title"] = "AllOrders";
}
<h2>All Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Order Date</th>
            <th>Ship Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CustomerId</td>
                <td>@order.OrderDate</td>
                <td>@order.ShipAddress</td>
            </tr>
        }
    </tbody>
</table>

